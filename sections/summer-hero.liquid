{% schema %}
{
  "name": "Summer Hero Section",
  "tag": "section",
  "class": "summer-hero-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Image de fond"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Titre",
      "default": "OUR NEW SUMMER COLLECTION"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Sous-texte (CTA)",
      "default": "Discover now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Lien du bouton"
    }
  ],
  "presets": [
    {
      "name": "Hero Summer Banner",
      "category": "Hero"
    }
  ]
}
{% endschema %}

{% style %}
.summer-hero-section {
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
}

.summer-hero-section .hero-content {
  z-index: 2;
  color: white;
  padding: 2rem;
  text-shadow: 0 2px 10px rgba(0, 0, 0, 0.4);
}

.summer-hero-section .hero-content h1 {
  font-size: 3rem;
  font-weight: 900;
  margin-bottom: 1.5rem;
  font-family: 'Anton', sans-serif; /* Tu peux changer ici selon ta police exacte */
}

.summer-hero-section .hero-content a {
  font-size: 1.25rem;
  color: white;
  text-decoration: none;
  border-bottom: 1px solid transparent;
  transition: border-color 0.3s ease;
}

.summer-hero-section .hero-content a:hover {
  border-color: white;
}

@media screen and (max-width: 768px) {
  .summer-hero-section .hero-content h1 {
    font-size: 2rem;
  }
  .summer-hero-section .hero-content a {
    font-size: 1rem;
  }
}
{% endstyle %}

{% assign bg_url = section.settings.background_image | image_url: 'master' %}

<div class="summer-hero-section" style="background-image: url('{{ bg_url }}');">
  <div class="hero-content">
    <h1>{{ section.settings.headline }}</h1>
    {% if section.settings.cta_link %}
      <a href="{{ section.settings.cta_link }}">{{ section.settings.subtext }}</a>
    {% endif %}
  </div>
</div>
