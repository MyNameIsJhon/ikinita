{% schema %}
{
  "name": "Summer Hero Section",
  "tag": "section",
  "class": "summer-hero-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Image de fond"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Titre",
      "default": "OUR NEW SUMMER COLLECTION"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Sous-texte (CTA)",
      "default": "Discover now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Lien du bouton"
    }
  ],
  "presets": [
    {
      "name": "Hero Summer Banner",
      "category": "Hero"
    }
  ]
}
{% endschema %}

{% style %}
.summer-hero-section {
  position: relative;
  height: 100vh;
  width: 100%;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.summer-hero-section .hero-content {
  color: white;
  text-shadow: 0 0 10px rgba(0,0,0,0.3);
}
.summer-hero-section .hero-content h1 {
  font-size: 3rem;
  font-weight: 900;
  font-family: 'Anton', sans-serif; /* Ã  adapter selon ta typo Figma */
  margin-bottom: 1rem;
}
.summer-hero-section .hero-content a {
  font-size: 1.25rem;
  color: white;
  text-decoration: underline;
  transition: opacity 0.3s ease;
}
.summer-hero-section .hero-content a:hover {
  opacity: 0.8;
}
@media screen and (max-width: 768px) {
  .summer-hero-section .hero-content h1 {
    font-size: 2rem;
  }
  .summer-hero-section .hero-content a {
    font-size: 1rem;
  }
}
{% endstyle %}

<div class="summer-hero-section" style="background-image: url({{ section.settings.background_image | image_url: 'master' }});">
  <div class="hero-content">
    <h1>{{ section.settings.headline }}</h1>
    {% if section.settings.cta_link %}
      <a href="{{ section.settings.cta_link }}">{{ section.settings.subtext }}</a>
    {% endif %}
  </div>
</div>
